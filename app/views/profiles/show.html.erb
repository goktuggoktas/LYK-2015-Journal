<% @user.posts.each do |post| %>
    <div class="post_wrapper">
      <h4 class="title"><strong><%= link_to post.title ,post%></strong></h4>
      <div style="padding: 0px 0px 0px 50px;">
        <div class="img-circle">
          <%= image_tag post.post_image.url(:medium) , class: "circle"%>
        </div>
        <div class="body">
          <% if post.body.length > 250 %>
              <%= truncate(post.body, length: 250) %>
              <a><%= link_to 'Read more', post_path(post) %></a>
          <% else %>
              <%= post.body %>
          <% end %>
        </div>
      </div>
      <p class="date">
        From:
        <%= post.user.name.capitalize %>
        <%= post.user.surname.capitalize %>&nbsp;&nbsp;&nbsp;&nbsp;
        <%= post.created_at.strftime(" %d, %B, %Y ") %>
      </p>
    </div>
<% end  %>